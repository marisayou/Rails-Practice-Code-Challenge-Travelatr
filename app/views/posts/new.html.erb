<%= form_for @post do |f| %>
    <%= f.label :blogger %>
    <%= f.collection_select :blogger_id, @bloggers, :id, :name %>
    <br>
    <%= f.label :destination %>
    <%= f.collection_select :destination_id, @destinations, :id, :name %>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <br>
    <%= f.submit %>
<% end %>